@model Atlas.Models.ViewModels.MushroomVM

@{
    ViewData["Title"] = "Update";
}

<h1>Edycja Grzyba: @Model.Name</h1>

<div class="row">
    <div class="col-md-4">
        <form action="/Pulpit/Grzyby/Edycja" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input asp-for="ID" type="hidden" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Edibility" /> @Html.DisplayNameFor(model => model.Edibility)
                </label>
            </div>
            <div>
                <h2>Występowanie</h2>

                @foreach (var item in Model.Occurences)
                {
                    <label>
                        <input type="checkbox" id="@item.ID" name="occurences" value="@item.Name"/>
                        @item.Name
                    </label>
                }



            </div>
            <div class="form-group">
                <label asp-for="LatinName" class="control-label"></label>
                <input asp-for="LatinName" class="form-control" />
                <span asp-validation-for="LatinName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Family" class="control-label"></label>
                <input asp-for="Family" class="form-control" />
                <span asp-validation-for="Family" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kind" class="control-label"></label>
                <input asp-for="Kind" class="form-control" />
                <span asp-validation-for="Kind" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz Zmiany" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy</a>
</div>

